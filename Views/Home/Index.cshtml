@{
    ViewData["Title"] = "Seyri Ala - Akıllı Rota";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Nereye Gitmek İstersin?</h1>
        <p class="text-muted">Haritadan bir şehir seç ve senin için en uygun rotayı hazırlayalım.</p>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div id="map" style="height: 500px; width: 100%; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.15); border: 2px solid #fff;"></div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg p-4" style="border-radius: 20px; background: #f8f9fa;">
                <h4 class="fw-bold mb-3">Seyahat Kriterlerin</h4>
                <p class="small text-secondary mb-4">Sana özel öneriler için ilgi alanlarını işaretle.</p>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" id="checkHistory">
                    <label class="form-check-label" for="checkHistory">📜 Tarihi Mekanlar</label>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" id="checkNature">
                    <label class="form-check-label" for="checkNature">🌲 Doğal Güzellikler</label>
                </div>
                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" id="checkFood">
                    <label class="form-check-label" for="checkFood">🍲 Gastronomi Turu</label>
                </div>

                <button class="btn btn-primary btn-lg w-100 shadow" onclick="planla()" style="border-radius: 12px;">
                    ✨ Rotamı Oluştur
                </button>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    // Türkiye merkezli haritayı başlat
    var map = L.map('map').setView([39.9334, 32.8597], 6);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap'
    }).addTo(map);

    // İlk Pin'imizi (İşaretçi) Ankara'ya atalım (Sürpriz!)
    L.marker([39.9334, 32.8597]).addTo(map)
        .bindPopup('<b>Ankara</b><br>Başkent seni bekliyor!')
        .openPopup();

    function planla() {
        alert("Harika seçim! AI şu an veritabanını tarıyor...");
    }
</script>